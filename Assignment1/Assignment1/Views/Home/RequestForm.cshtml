@model Assignment1.Models.Request
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Request Form</title>
</head>
<body>
<h2 class="text-center">Request IT Equipment</h2>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-light text-dark border-secondary">
                <div class="card-body">
                        <form asp-action="RequestForm" method="post" class="needs-validation" novalidate>
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" class="form-control border-secondary" asp-for="Name" placeholder="Enter your name" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" class="form-control border-secondary" asp-for="Email" placeholder="Enter your email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Phone">Phone</label>
                            <input type="text" class="form-control border-secondary" asp-for="PhoneNumber" placeholder="xxx-xxx-xxxx" required>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select class="form-control border-secondary" asp-for="Role">
                                <option value="">Select your role</option>
                                <option value="Student">Student</option>
                                <option value="Professor">Professor</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                            <div class="form-group">
                                <label for="Equipment">Equipment Type</label>
                                <select asp-for="Equipment" asp-items="Html.GetEnumSelectList<Assignment1.Models.EquipmentType>()" class="form-control border-secondary">
                                    <option selected="selected" value="">Please select equipment type</option>
                                </select>
                                <span asp-validation-for="Equipment" class="text-danger"></span>
                            </div>


                        <div class="form-group">
                            <label for="RequestDetails">Request Details</label>
                            <textarea class="form-control border-secondary" asp-for="RequestDetails" rows="3" placeholder="Enter details about your request" required></textarea>
                            <span asp-validation-for="RequestDetails" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Duration">Duration (in days)</label>
                            <input type="number" class="form-control border-secondary" asp-for="Duration" placeholder="Enter duration (days)" min="1" required>
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-secondary btn-block mt-3">Submit Request</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
</html>
